<%= render "shared/sidebar" %>

<main class="main-content" data-theme="dark">
  <div class="stats-header">
    <h1>üìä Global Stats</h1>
    <p class="subtitle">YSWS Projects Overview</p>
  </div>

  <div class="stats-summary">
    <div class="stat-card">
      <span class="stat-value"><%= number_with_delimiter(@total_projects) %></span>
      <span class="stat-label">üöÄ Total Projects</span>
    </div>
    <div class="stat-card">
      <span class="stat-value"><%= number_with_delimiter(@total_hours) %></span>
      <span class="stat-label">‚è±Ô∏è Total Hours</span>
    </div>
    <div class="stat-card">
      <span class="stat-value"><%= number_with_delimiter(@total_stars) %></span>
      <span class="stat-label">‚≠ê GitHub Stars</span>
    </div>
    <div class="stat-card">
      <span class="stat-value"><%= number_with_delimiter(@viral_projects) %></span>
      <span class="stat-label">üìà Viral Projects</span>
    </div>
  </div>

  <div class="stats-grid">
    <div class="stats-section">
      <h2>üèÜ Top Starred Projects</h2>
      <% if @top_starred.any? %>
        <div class="list-section">
          <% @top_starred.each do |entry| %>
            <div class="list-item">
              <% if entry.code_url.present? %>
                <a href="<%= entry.code_url %>" target="_blank" class="list-name list-link"><%= entry.name || entry.ysws || "Untitled" %></a>
              <% else %>
                <span class="list-name"><%= entry.name || entry.ysws || "Untitled" %></span>
              <% end %>
              <span class="list-value">‚≠ê <%= entry.github_stars %></span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="empty-state">No starred projects yet.</p>
      <% end %>
    </div>

    <div class="stats-section">
      <h2>üåç Projects by Country</h2>
      <% if @projects_by_country.any? %>
        <div class="list-section">
          <% @projects_by_country.each do |country, count| %>
            <div class="list-item">
              <span class="list-name"><%= country %></span>
              <span class="list-value"><%= count %></span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="empty-state">No country data available.</p>
      <% end %>
    </div>

    <div class="stats-section">
      <h2>üì¶ Projects by YSWS</h2>
      <% if @projects_by_ysws.any? %>
        <div class="list-section">
          <% @projects_by_ysws.each do |ysws, count| %>
            <div class="list-item">
              <span class="list-name"><%= ysws %></span>
              <span class="list-value"><%= count %></span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="empty-state">No YSWS data available.</p>
      <% end %>
    </div>

    <div class="stats-section">
      <h2>üïê Recently Approved</h2>
      <% if @recent_projects.any? %>
        <div class="list-section">
          <% @recent_projects.each do |entry| %>
            <div class="list-item">
              <% if entry.code_url.present? %>
                <a href="<%= entry.code_url %>" target="_blank" class="list-name list-link"><%= entry.name || entry.ysws || "Untitled" %></a>
              <% else %>
                <span class="list-name"><%= entry.name || entry.ysws || "Untitled" %></span>
              <% end %>
              <span class="list-value"><%= time_ago_in_words(entry.approved_at) %> ago</span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="empty-state">No approved projects yet.</p>
      <% end %>
    </div>
  </div>
</main>

<style>
  .stats-header {
    margin-bottom: 2rem;
  }

  .stats-header h1 {
    margin: 0;
  }

  .subtitle {
    color: #888;
    margin-top: 0.25rem;
  }

  .stats-summary {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .stat-card {
    background: #2a2a3e;
    border-radius: 0.75rem;
    padding: 1.5rem;
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 2rem;
    font-weight: bold;
    color: #fff;
  }

  .stat-label {
    display: block;
    font-size: 0.875rem;
    color: #888;
    margin-top: 0.25rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .stats-section {
    background: #2a2a3e;
    border-radius: 0.75rem;
    padding: 1.25rem;
  }

  .stats-section h2 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #fff;
  }

  .list-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-height: 300px;
    overflow-y: auto;
  }

  .list-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
    background: #1a1a2e;
    border-radius: 0.5rem;
  }

  .list-name {
    color: #ddd;
    font-size: 0.875rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 200px;
  }

  .list-link {
    color: #6366f1;
    text-decoration: none;
  }

  .list-link:hover {
    text-decoration: underline;
  }

  .list-value {
    color: #a5b4fc;
    font-size: 0.875rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .empty-state {
    color: #888;
    text-align: center;
    padding: 2rem;
    font-size: 0.875rem;
  }
</style>
