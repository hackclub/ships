<div class="container">
  <h1>Ships</h1>

  <% if logged_in? %>
    <p>Welcome, <%= current_user.display_name %>!</p>
    <%= button_to "Sign Out", logout_path, method: :delete, class: "btn" %>
  <% else %>
    <%= link_to "Sign in with Hack Club", "/auth/hack_club", class: "btn" %>
  <% end %>
</div>
